{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "lib": ["es2017", "dom"],
    "outDir": "dist",
    "rootDirs": ["src", "tests"]
  },
  "exclude": ["node_modules", "dist", "webpack.config.js", "out"]
}