{
    "env": {
        "node": true,
        "mocha": true,
        "commonjs": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "curly": [ "error", "multi" ],
        "sort-imports": "error",
        "semi": [ "error", "never" ],
        "quotes": [ "error", "single" ],
        "no-unused-vars": "error"
    }
}
